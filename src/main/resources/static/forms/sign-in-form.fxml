<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: #0f5e82;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kg.itschool.booking.controller.SignInController">
   <children>
      <Button layoutX="100.0" layoutY="14.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: transparent;" text="Sign In" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="signUpButton" layoutX="250.0" layoutY="14.0" mnemonicParsing="false" onAction="#onSignUpButtonClicked" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: transparent;" text="Sing Up" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Separator layoutX="100.0" layoutY="63.0" prefWidth="150.0" />
      <TextField fx:id="userNameTextField" layoutX="85.0" layoutY="95.0" prefHeight="35.0" prefWidth="350.0" promptText="Username" />
      <TextField fx:id="passwordTextField" layoutX="85.0" layoutY="143.0" prefHeight="35.0" prefWidth="350.0" promptText="Password" />
      <Button fx:id="submitButton" layoutX="85.0" layoutY="211.0" mnemonicParsing="false" onAction="#onSubmitButtonClicked" prefHeight="37.0" prefWidth="350.0" text="Submit" />
      <Button fx:id="closeButton" layoutX="459.0" layoutY="-7.0" mnemonicParsing="false" onAction="#onCloseButtonClicked" prefHeight="41.0" prefWidth="30.0" style="-fx-background-color: transparent;" text="x" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font size="28.0" />
         </font>
         <padding>
            <Insets left="20.0" />
         </padding>
      </Button>
   </children>
</AnchorPane>
